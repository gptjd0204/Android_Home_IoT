<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="가스밸브 사용 로그 조회"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:stretchColumns="*">

        <TableRow
            android:background="@color/colorLogTimeBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="조회 시작 날짜"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="조회 종료 날짜"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_gas_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textSize="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_gas_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textSize="15dp"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DAY 혹은 MONTH를 눌러 날짜를 설정하세요"
        android:textSize="20dp"
        >
    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/gas_day_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="DAY" />


        <Button
            android:id="@+id/gas_month_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="MONTH" />

    </LinearLayout>



    <Button
        android:id="@+id/gas_log_start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그 조회" />
    <ListView
        android:id="@+id/gas_logList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff99ccee"
        android:textColor="#ff0000ff"
        android:textSize="12dp"></ListView>
    <TextView
        android:id="@+id/gas_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>