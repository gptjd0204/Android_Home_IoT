<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="가스 밸브"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="조회 시작"
                android:id = "@+id/startGetBtn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="조회 종료"
                android:id = "@+id/stopGetBtn"
                />
        </LinearLayout>
    -->
    <ImageView
        android:id="@+id/gas_drawable"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/gas_off"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        />

    <TextView
        android:id="@+id/reported_gas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:hint="잠시만 기다려주세요..."
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="19dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="켜 기"
            android:textSize="25sp"
            android:id = "@+id/updateRunBtn"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="끄 기"
            android:textSize="25sp"
            android:id = "@+id/updateStopBtn"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/homeIotBtn"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:text="홈 IoT 상태 조회"
        android:textSize="20dp"
        android:textColor="#0000ff"
        />
    <Button
        android:id="@+id/homeBtn"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:text="메인 화면"
        android:textSize="20dp"
        android:textColor="#0000ff"
        />
</LinearLayout>